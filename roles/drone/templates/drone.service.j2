[Unit]
Description=Drone
Requires=docker.service
After=docker.service

[Service]
Restart=always
User={{ drone_user }}
Group=docker
# Shutdown container (if running) when unit is stopped
ExecStartPre=/usr/local/bin/docker-compose -f {{ drone_working_dir }}/docker-compose.yml down -v
# Start container when unit is started
ExecStart=/usr/local/bin/docker-compose -f {{ drone_working_dir }}/docker-compose.yml up
# Stop container when unit is stopped
ExecStop=/usr/local/bin/docker-compose -f {{ drone_working_dir }}/docker-compose.yml down -v

[Install]
WantedBy=multi-user.target
