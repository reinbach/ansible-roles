DEBUG=False
SECRET_KEY={{ django_secret_key }}
ALLOWED_HOSTS={{ django_domain }},www.{{ django_domain }},{{ ansible_default_ipv4.address }}
SITE_DOMAIN={{ django_domain }}
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

DATABASE_URL=psql://{{ django_database_user }}:{{ django_database_password }}@{{ django_database_uri }}:5432/{{ django_database_name }}

{% if redis_domain is defined %}
CACHE_URL=rediscache://{{ redis_domain }}:6379/0?client_class=django_redis.client.DefaultClient&password={{ redis_password }}
{% endif %}

EMAIL_HOST={{ django_smtp_host }}
EMAIL_PORT={{ django_smtp_port }}
EMAIL_HOST_USER={{ django_smtp_user }}
EMAIL_HOST_PASSWORD={{ django_smtp_password }}

STATIC_ROOT={{ django_static_dir }}

{% for item in django_env_vars %}
{{ item.key }}={{ item.value }}
{% endfor %}
