#!/bin/bash

GITEA_BIN={{ gitea_bin }}
GITEA_CONFIG={{ gitea_config_dir }}/app.ini
GITEA_AUTH_CMD="${GITEA_BIN} --config=${GITEA_CONFIG} admin create-user"

USERNAME="{{ gitea_system_user }}"
EMAIL="{{ gitea_system_user }}@{{ gitea_domain }}"
ARGS=" --username $USERNAME --password password --email $EMAIL --admin"

$GITEA_AUTH_CMD $ARGS
